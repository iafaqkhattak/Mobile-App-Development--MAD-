<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="917dp"
        android:layout_height="118dp"
        app:cardBackgroundColor="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007">

        <TextView
            android:id="@+id/textView"
            android:layout_width="567dp"
            android:layout_height="106dp"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Hello,  Afaq"
            android:textAlignment="center"
            android:textSize="60sp" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="941dp"
        android:layout_height="499dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211"
        tools:layout_editor_absoluteX="-17dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginLeft="10dp"
            android:text="Recharge"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="177dp"
            android:layout_height="114dp"
            android:layout_marginLeft="700dp"
            android:text="Loan"
            tools:textSize="34sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="708dp"
            android:layout_height="370dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="120dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901"
        tools:layout_editor_absoluteX="0dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="957dp"
        android:layout_height="129dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="843dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:text="Packages"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="234dp"
            android:layout_height="118dp"
            android:layout_marginLeft="700dp"
            android:text="Balance"
            android:textSize="34sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>